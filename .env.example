# Hosphack Healthcare Platform Environment Variables
# Copy this file to .env and fill in your actual values

# ==============================================
# DATABASE CONFIGURATIONS
# ==============================================

# Hospital EMR Database (SQL Server)
EMR_DB_SERVER=localhost
EMR_DB_PORT=1433
EMR_DB_NAME=DanpheEMR
EMR_DB_USER=sa
EMR_DB_PASSWORD=HospitalEMR123!

# Telemedicine Database (PostgreSQL)
TELEMEDICINE_DB_HOST=localhost
TELEMEDICINE_DB_PORT=5432
TELEMEDICINE_DB_NAME=telemedicine
TELEMEDICINE_DB_USER=telemedicine_user
TELEMEDICINE_DB_PASSWORD=telemedicine_pass
TELEMEDICINE_DATABASE_URL=postgresql://telemedicine_user:telemedicine_pass@localhost:5432/telemedicine

# VideoSDK Telehealth Database (PostgreSQL)
TELEHEALTH_DB_HOST=localhost
TELEHEALTH_DB_PORT=5433
TELEHEALTH_DB_NAME=telehealth
TELEHEALTH_DB_USER=telehealth_user
TELEHEALTH_DB_PASSWORD=telehealth_pass
TELEHEALTH_DATABASE_URL=postgresql://telehealth_user:telehealth_pass@localhost:5433/telehealth
TELEHEALTH_DATABASE_DIRECT_URL=postgresql://telehealth_user:telehealth_pass@localhost:5433/telehealth

# ==============================================
# AUTHENTICATION & SECURITY
# ==============================================

# JWT Secrets
JWT_SECRET=your_super_secure_jwt_secret_key_here
NEXTAUTH_SECRET=your_nextauth_secret_key_here
NEXTAUTH_URL=http://localhost:3000

# ==============================================
# TELEMEDICINE APP CONFIGURATION
# ==============================================

# API Configuration
TELEMEDICINE_API_URL=http://localhost:3001
NEXT_PUBLIC_API_URL=http://localhost:3001

# Agora Video SDK
NEXT_PUBLIC_AGORA_APP_ID=your_agora_app_id
AGORA_APP_CERTIFICATE=your_agora_app_certificate

# ==============================================
# VIDEOSDK TELEHEALTH CONFIGURATION
# ==============================================

# Zoom Video SDK Credentials
ZOOM_SDK_KEY=your_zoom_sdk_key
ZOOM_SDK_SECRET=your_zoom_sdk_secret
ZOOM_API_KEY=your_zoom_api_key
ZOOM_API_SECRET=your_zoom_api_secret

# OAuth Providers (GitHub example)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Google OAuth (alternative)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# ==============================================
# EMAIL & COMMUNICATION SERVICES
# ==============================================

# SendGrid Email Service
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# Nodemailer Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Twilio SMS Service
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ==============================================
# FILE STORAGE (AWS S3 Compatible)
# ==============================================

# AWS S3 Configuration
S3_ENDPOINT=https://s3.amazonaws.com
S3_REGION=us-east-1
S3_BUCKET=your-healthcare-bucket
S3_ACCESS_KEY_ID=your_aws_access_key
S3_SECRET_ACCESS_KEY=your_aws_secret_key

# CloudFlare R2 (Alternative)
# S3_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
# S3_REGION=auto

# ==============================================
# REDIS CACHE (OPTIONAL)
# ==============================================

REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# ==============================================
# APPLICATION SETTINGS
# ==============================================

# Environment
NODE_ENV=development
# NODE_ENV=production

# Server Ports
TELEMEDICINE_BACKEND_PORT=3001
TELEMEDICINE_FRONTEND_PORT=3000
VIDEOSDK_PORT=3002

# Logging
LOG_LEVEL=info
# LOG_LEVEL=debug

# ==============================================
# MONITORING & ANALYTICS
# ==============================================

# Application Monitoring
SENTRY_DSN=your_sentry_dsn

# Google Analytics
NEXT_PUBLIC_GA_ID=your_google_analytics_id

# ==============================================
# PAYMENT PROCESSING (IF APPLICABLE)
# ==============================================

# Stripe
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# ==============================================
# EXTERNAL API INTEGRATIONS
# ==============================================

# Medical APIs (Example)
MEDICAL_API_KEY=your_medical_api_key
PHARMACY_API_KEY=your_pharmacy_api_key

# Maps API (for location services)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# ==============================================
# DOCKER CONFIGURATION
# ==============================================

# Docker Compose Override
COMPOSE_PROJECT_NAME=hosphack
COMPOSE_FILE=docker-compose.yml

# ==============================================
# SSL/TLS CERTIFICATES (PRODUCTION)
# ==============================================

# SSL Certificate paths (for production)
SSL_CERT_PATH=/etc/ssl/certs/your_domain.crt
SSL_KEY_PATH=/etc/ssl/private/your_domain.key

# ==============================================
# BACKUP CONFIGURATION
# ==============================================

# Database Backup
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket